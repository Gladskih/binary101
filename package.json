{
  "name": "binary101",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.tests.json",
    "build": "tsc && node scripts/copy-static.mjs",
    "build:tests": "tsc -p tsconfig.tests.json",
    "test": "npm run build && npm run test:unit && npm run test:e2e",
    "test:unit": "npm run build:tests && node --test dist-tests/unit/**/*.js",
    "test:unit:run": "node --test dist-tests/unit/**/*.js",
    "test:coverage": "npm run build && npm run build:tests && c8 --all --exclude=dist/app.js --exclude=dist/renderers/** --exclude=dist-tests/** --exclude=playwright.config.mjs --exclude=eslint.config.mjs --exclude=tests/e2e/** node --test dist-tests/unit/**/*.js",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.49.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@xmldom/xmldom": "^0.8.11",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "http-server": "^14.1.1",
    "typescript": "^5.6.3"
  }
}
